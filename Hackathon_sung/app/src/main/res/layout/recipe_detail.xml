<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="레시피 상세"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:paddingTop="15dp"
        android:paddingBottom="15dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:src="@drawable/back"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:background="@color/colorPrimary" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_img"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/recipe1"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView16"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignTop="@+id/recipe_img"
        android:layout_toEndOf="@+id/recipe_img"
        android:layout_marginStart="61dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/recipe_img"
        android:layout_alignStart="@+id/recipe_img"
        android:layout_marginTop="27dp"
        android:id="@+id/tableLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="148dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주재료"
                android:id="@+id/textView17"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:focusable="false"
                android:layout_alignTop="@+id/tableLayout"
                android:layout_toEndOf="@+id/imageButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타재료 "
                android:id="@+id/textView18"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="120dp" />

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="레시피"
                android:id="@+id/textView19"
                android:layout_column="1"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="30dp" />
        </TableRow>

    </TableLayout>


</RelativeLayout>