<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0">


    <LinearLayout
        android:id="@+id/linearLayout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="레시피"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_bt"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dp"
            android:background="@drawable/ic_cancle"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="레시피 제목"
                android:id="@+id/title"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView18"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#a4a4a4" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:id="@+id/img"
                    android:background="@drawable/recipe2" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="재료 설명,재료 설명,재료 설명,재료 설명,재료 설명,재료 설명,재료 설명,재료 설명,"
                        android:id="@+id/sub_title"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView19"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#a4a4a4" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="주재료"
                        android:id="@+id/textView20"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="재료1\n재료2\n재료3\n재료4"
                        android:id="@+id/food"
                        android:textAlignment="center"
                        android:lines="5" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="5" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="기타재료"
                        android:id="@+id/textView21"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="재료1\n재료2\n재료3\n재료4"
                        android:id="@+id/food_etc"
                        android:textAlignment="center"
                        android:lines="5" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:text="New Text"
                android:id="@+id/textView24"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#a4a4a4" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="요리법"
                    android:id="@+id/textView25"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법요리법"
                    android:id="@+id/contents"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="50dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
